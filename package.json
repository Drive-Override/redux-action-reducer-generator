{
  "name": "redux-action-reducer-generator",
  "version": "1.0.1",
  "repository": {
    "type": "github",
    "url": "https://github.com/Drive-Override/redux-action-reducer-generator.git"
  },
  "description": "A generator function to automate the creation of redux actions and reducers",
  "main": "dist/index.js",
  "scripts": {
    "test": "nyc mocha",
    "test:watch": "mocha --watch",
    "build": "webpack",
    "release:patch": "better-npm-run release:patch",
    "release:minor": "better-npm-run release:minor",
    "release:major": "better-npm-run release:major",
    "report": "cat ./coverage/lcov.info | codecov"
  },
  "betterScripts": {
    "release:patch": {
      "command": "release-it env.patch",
      "env": {
        "GITHUB_TOKEN": "6cb2056a81627578119c7b1cf9d50e690200c304"
      }
    },
    "release:minor": {
      "command": "release-it env.minor",
      "env": {
        "GITHUB_TOKEN": "6cb2056a81627578119c7b1cf9d50e690200c304"
      }
    },
    "release:major": {
      "command": "release-it env.major",
      "env": {
        "GITHUB_TOKEN": "6cb2056a81627578119c7b1cf9d50e690200c304"
      }
    }
  },
  "keywords": [
    "redux",
    "action",
    "generator",
    "reducer",
    "generator"
  ],
  "author": "Philipp Rost",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.1",
    "babel-loader": "^8.0.5",
    "better-npm-run": "^0.1.1",
    "codecov": "^3.2.0",
    "expect.js": "^0.3.1",
    "husky": "^1.3.1",
    "mocha": "^6.0.2",
    "release-it": "^10.3.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "nyc": "^13.3.0"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "config": {
    "husky": {
      "hooks": {
        "pre-commit": "npm test"
      }
    },
    "release-it": {
      "github": {
        "release": true,
        "tokenRef": "GITHUB_TOKEN"
      }
    }
  }
}
